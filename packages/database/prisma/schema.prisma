generator client {
  provider = "prisma-client-js"
  // Disable its causing issues with the esm based project of nodejs 
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(cuid())
  name  String
  email String @unique

  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  ApiKey         ApiKey[]
  Media          Media[]
  SocialAccounts SocialAccount[]
}

model ApiKey {
  id          String  @id @default(cuid())
  KeyId       String  @unique
  Key         String  @unique
  name        String
  description String?
  userId      String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}

model Media {
  id        String    @id @default(cuid())
  type      MediaType
  size      BigInt
  url       String
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  user      User      @relation(fields: [userId], references: [id])
  userId    String
  Post      Post?     @relation(fields: [postId], references: [id])
  postId    String?
}

enum MediaType {
  IMAGE
  VIDEO
}

model SocialAccount {
  id     String            @id @default(cuid())
  user   User              @relation(fields: [userId], references: [id])
  userId String
  type   SocialAccountType

  username       String
  profilePicture String?
  accessToken    String
  accessSecret   String?
  error          String?
  paused         Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Post      Post?    @relation(fields: [postId], references: [id])
  postId    String?
}

enum SocialAccountType {
  INSTAGRAM
  X
}

model Post {
  id            String          @id @default(cuid())
  text          String
  media         Media[]
  socialAccount SocialAccount[]

  scheduledAt DateTime @default(now())
  postedAt    DateTime @default(now())
  posted      Boolean  @default(false)
  draft       Boolean  @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
